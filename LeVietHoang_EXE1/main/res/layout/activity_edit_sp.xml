<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
   android:padding="50dp"
    tools:context="com.example.myapplication.ThemHangActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="QUẢN LÝ SẢN PHẨM"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tên sản phẩm" />

            <EditText
                android:id="@+id/txtTenSP_EditSP"
                android:layout_width="309dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục" />

            <Spinner
                android:id="@+id/spinnerDM_EditSP"
                android:layout_width="306dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng" />

            <EditText
                android:id="@+id/txtSoluong_ThemSP_EditSP"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá cả" />

            <EditText
                android:id="@+id/txtGiaca_ThemSP_EditSP"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center" >

                <ImageButton
                    android:id="@+id/ibnCamera_EditSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photo_camera" />

                <ImageButton
                    android:id="@+id/ibnFolder_EditSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/folder" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgHinh_EditSP"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    
                    
                    android:scaleType="fitXY"
                    android:src="@drawable/picture" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/btnDelete_EditSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:background="#FF9900"
                    android:text="Xóa"
                    android:textColorLink="#000011"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="           " />

                <Button
                    android:id="@+id/btnEdit_ThemSP_EditSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:background="#FF9900"
                    android:text="Sửa"
                    android:textColorLink="#000011"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/ibtnBack3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="5.82"
                android:src="@drawable/back" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>