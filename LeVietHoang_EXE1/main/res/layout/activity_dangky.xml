<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/management"
   android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.myapplication.DangkyActivity" >


                <TextView
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="ĐĂNG KÝ TÀI KHOẢN"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:id="@+id/tv_ID"
                        android:layout_width="29dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.87"
                        android:width="79dp"
                        android:text="Tài khoản"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtUsername_User"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.87"
                        android:width="200dp"
                        android:background="#fff"
                        />


                    <requestFocus />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_Name"
                        android:textStyle="bold"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:text="Mật khẩu"
                        android:textSize="15sp"
                        android:width="79dp" />

                    <EditText
                        android:id="@+id/txtPassword_User"
                        android:layout_width="218dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:inputType="textPassword"
                        android:width="200dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    >

                    <Button
                        android:layout_marginRight="10dp"
                        android:id="@+id/btnLogin"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#fff"
                        android:text="Lưu"
                        android:textColorLink="#000011"
                        android:textStyle="bold"
                        android:width="120dp" />

                    <Button
                        android:layout_marginLeft="10dp"
                        android:id="@+id/btnGiamgia"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#fff"
                        android:text="Nhập lại"
                        android:textColorLink="#000011"
                        android:textStyle="bold"
                        android:width="120dp" />
                </LinearLayout>



</LinearLayout>