<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.ThongkeActivity" >

    <EditText
        android:id="@+id/txtNgay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10" />

    <Button
        android:id="@+id/btnChonngay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Chọn ngày"
        android:textColorLink="#000011"
            android:textStyle="bold"
    		android:background="#FF9900" />

    <Button
        android:id="@+id/btnthongke"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNgay"
        android:layout_below="@+id/txtNgay"
        android:layout_marginTop="18dp"
        android:text="Thống kê"
        android:textColorLink="#000011"
            android:textStyle="bold"
    		android:background="#FF9900" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <ListView
        android:id="@+id/lis_thongkesp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnthongke"
        android:layout_below="@+id/btnthongke"
        android:layout_marginTop="44dp" >
    </ListView>

</RelativeLayout>