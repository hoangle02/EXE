<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="#F0F0F0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.ThemDanhMucActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </LinearLayout>

    </LinearLayout>
    <EditText
        android:id="@+id/txtTenSP_ThemSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="110dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTenSP_ThemSP"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center"
        android:text="THÊM DANH MỤC"
        android:paddingTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtTenSP_ThemSP"
        android:layout_alignLeft="@+id/txtTenSP_ThemSP"
        android:layout_marginBottom="51dp"
        android:text="Tên danh mục"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnSaveDM"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/txtTenSP_ThemSP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#5882FA"
        android:text="Lưu"
        android:textColorLink="#000011"
        android:textStyle="bold"
        android:width="120dp" />

    <ImageButton
        android:id="@+id/ibtnbackthemdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTenSP_ThemSP"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="61dp"
        android:src="@drawable/back" />

</RelativeLayout>
